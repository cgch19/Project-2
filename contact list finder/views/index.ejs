<!DOCTYPE html>
<html lang="en">
    
<body>
    
    <h1 class="bg-secondary-subtle p-2 text-center">Contacts</h1>
    <div class="container-sm">
        <a href="/contacts/new.ejs">Create Contact</a>
        <table class="table table-striped table-md">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < allContacts.length; i++){ %>
                    <tr>
                        <th scope="row">
                            <a href="/contacts/<%= allContacts[i]._id %>">
                                <%= allContacts[i].name %>
                            </a>
                        </th>
                        <td class="w-25">
                            <a href="/contacts/<%= allContacts[i]._id %>/edit" type="button" class="btn btn-info">Edit</a>
                        </td>
                        <td class="w-25">
                            <form method="POST" action="/contacts/<%= allContacts[i]._id %>?_method=DELETE">
                                <input 
                                class="btn btn-danger"
                                type="submit" value="DELETE"/>
                            </form>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    
</body>
</html>